<div class = "user" style="padding-bottom: 25px;">
  <h3><%= user.gamertag %></h3>
  <p><%= user.timezone %></p>

  <p style="float: left;">
    <label>Local time: </label>
    <%= user.local_time %>
  </p>

  <p style="float: right;">
    <%= link_to "Remove", 
                user,
                data: {confirm: "Are you sure?"},
                method: "DELETE",
                remote: true,
                class: "remove_user"%> 
  </p>

</div>